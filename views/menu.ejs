<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Menu</title>
</head>
<body>
  <%- include('./partials/nav') %>
  <h1>Full Menu</h1>
  
  <ul>
    <% const mains = menu.filter((item) => item.category === "mains") %>
    <% const desserts = menu.filter((item) => item.category === "desserts") %>
    <% const sides = menu.filter((item) => item.category === "sides") %>
    <% const sections = [mains, desserts, sides] %>
  <% sections.forEach((section) => { %>
    <h2><%= section[0].category %></h2>
    <% section.forEach((item) => { %>
    <li>
    <h3><%= item.name %> </h3>
    <p> <strong>$<%= item.price %></strong>  |
    Rating: <%= item.rating %> <%= item.rating === 5 ? "⭐": "" %> </p>
    <%= item.details %></li>
<% }); %>
<% }); %>
  </ul>
</body>
</html>
